rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow create: if request.auth.uid == userId || request.auth.uid != null;
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow update, delete: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Tour trips collection
    match /tours/{tourId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Sub-collections for tours
      match /registrations/{docId} {
        allow read, create, update: if request.auth.uid != null;
        allow delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      match /votingPlaces/{docId} {
        allow read, create, update: if request.auth.uid != null;
        allow delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        
        match /votes/{voteId} {
          allow read, create: if request.auth.uid != null;
          allow delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        }
      }
      
      match /seatingPlan/{docId} {
        allow read, create: if request.auth.uid != null;
        allow update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      match /groups/{groupId} {
        allow read, create: if request.auth.uid != null;
        allow update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        
        match /members/{memberId} {
          allow read, create: if request.auth.uid != null;
          allow delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        }
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

